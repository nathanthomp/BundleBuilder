<UserControl x:Class="RedBuilt.Revit.BundleBuilder.Views.BundleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedBuilt.Revit.BundleBuilder.Views"
        mc:Ignorable="d"
        Height="450" 
        Width="800">
    <Grid Margin="10">
        
        <!-- ListView -->
        <ListView x:Name="listView" Margin="0,50,0,70">
            <ListView.View>
                <GridView x:Name="gridView">

                </GridView>
            </ListView.View>
        </ListView>

        <!-- Label -->
        <Label Content="Select Panels To Bundle" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" Width="200"/>

        <!-- Buttons -->
        <Button Content="Settings" Command="{Binding NavigateSettingsCommand}" Margin="0,0,0,23" Height="36" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="308"/>
        <Button Content="Bundle" Command="{Binding NavigateExportCommand}" Margin="0,0,0,23" Height="36" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="308"/>
    </Grid>
</UserControl>
